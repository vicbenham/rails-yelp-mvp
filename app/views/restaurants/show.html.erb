<div class="container text-center">
  <h1 class="mt-3 mb-2"><%= @restaurant.name %></h1>
  <div class="d-flex flex-column border-bottom pb-4">
    <div>
      <i class="fa-solid fa-house me-2"></i>
      <%= @restaurant.address %>
    </div>
    <div>
      <i class="fa-solid fa-phone me-2"></i>
      <%= @restaurant.phone_number.nil? ? "N/A" : @restaurant.phone_number %>
    </div>
    <div>
      <i class="fa-solid fa-utensils me-2"></i>
      <%= @restaurant.category %>
    </div>
  </div>

  <div class="d-flex justify-content-center align-items-center">
    <h3 class="my-3">Reviews</h3>
    <%= link_to '<i class="fa-solid fa-plus me-2"></i>Add a review'.html_safe,
    new_restaurant_review_path(@restaurant),
    class: "btn btn-success m-0 ms-3"
    %>
  </div>

    <ul class="list-unstyled row justify-content-between">
      <% @restaurant.reviews.each do |review| %>
      <div class="card p-3 col-5 m-4 mx-5 bg-light">
        <li class="border-bottom pb-2"><%= review.content %></li>
        <li class="mt-2"><%= review.rating %>/5</li>
      </div>
      <% end %>
    </ul>
  <%= link_to '<i class="fa-solid fa-rotate-left"></i> Back to restaurant list'.html_safe, restaurants_path, class: "btn btn-primary mb-5" %>
  </div>

</div>
