<div class="container text-center">
  <h1 class="mt-3 border-bottom pb-4">Restaurants</h1>

  <div class="my-4">
    <%= link_to '<i class="fa-solid fa-plus"></i> Add new restaurant'.html_safe, new_restaurant_path, class: "btn btn-success" %>
  </div>

  <ul class="list-unstyled row justify-content-between">
    <% @restaurants.each do |restaurant| %>
    <div class="card p-3 col-5 m-4 mx-5 bg-light">
      <li>
        <%= link_to restaurant.name, restaurant_path(restaurant), class: "text-decoration-none mb-1 btn btn-primary" %>
        <em><p class="m-0"><%= restaurant.category %></p></em>
      </li>
    </div>
    <% end %>
  </ul>
</div>
