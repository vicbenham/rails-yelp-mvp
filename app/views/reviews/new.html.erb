<div class="container text-center">
  <h1 class="mt-3 border-bottom pb-4">Add a review for <%= @restaurant.name %></h1>
  <div class="container">
    <div class="d-flex justify-content-center">
      <div class="w-50">
        <%= simple_form_for [@restaurant, @review] do |f| %>
          <%= f.input :content %>
          <%= f.input :rating %>
          <%= f.submit class: "btn btn-success mb-5 mt-3" %>
        <% end %>
      </div>
    </div>

    <%= link_to '<i class="fa-solid fa-rotate-left"></i> Back to restaurant'.html_safe, restaurant_path(@restaurant), class: "btn btn-primary mb-5" %>
  </div>
</div>
